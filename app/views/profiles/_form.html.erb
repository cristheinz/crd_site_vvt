   	<%= f.text_field :att, class: 'span12' %>

    <%= f.label :msg1, 'Mensagem de boas-vondas' %>
   	<%= f.text_area :msg1, rows: 3, class: 'span12' %>

    <%= f.label :msg2, 'Mensagem' %>
   	<%= f.text_area :msg2, rows: 3, class: 'span12' %>
    
    
    <%= f.label :password %>
    <%= f.password_field :password, class: 'span12' %>

    <%= f.label :password_confirmation, "Confirmar Password" %>
    <%= f.password_field :password_confirmation, class: 'span12' %>


    <%= f.submit "Gravar", class:"btn btn-info" %>
<% end %>
</div>
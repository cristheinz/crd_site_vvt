<% provide(:title, t(:administration)) %>
<div class="row">
	<div class="span12">

		<div class="inner-box">
			<h1><%=t(:packages)%></h1>
			
			<div class="form-actions">
				<%= link_to t(:new_pack), new_pack_path, class: 'btn btn-info pull-right' %>
			</div>
			

	<table class="table table-condensed">
  		<tr>
  			<th><%=t(:image)%></th>
    		<th><%=t(:category)%></th>
    		<th><%=t(:promo)%></th>
    		<th><%=t(:star)%></th>
    		<!--<th>International?</th>-->
    		<th><%=t(:options)%></th>
  		</tr>
	<% @packs.each do |pack| %>
  		<tr class=<%= row_status(pack)%>>
  			<td><%= link_to image_tag(pack.image.to_s, class: 'span2'), pack.pdf.to_s, target: '_blank' if pack.image? %></td>
    		<td><%= get_category(pack.category_id) %></td>
    		<td><i class="<%= pack.promo ? 'icon-ok' : 'icon-remove' %>"></i></td>
    		<td><i class="<%= pack.star ? 'icon-ok' : 'icon-remove' %>"></i></td>
    		<!--<td><%= pack.international %></td>-->
    		<td><%= link_to t(:edit), edit_pack_path(pack) %>
    		| <%= link_to t(:delete), pack, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  		</tr>
	<% end %>
	</table>
		</div>
	</div>
</div>

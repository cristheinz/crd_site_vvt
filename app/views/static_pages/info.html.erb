<% provide(:title, t(:info)) %>
<h4><%=t(:cambi)%></h4>
<div class="inner-box">
	<%= form_for(:cambi, url: info_path, remote: true, class: '') do |f| %>
		<%= f.label :val, t(:val), class: "visible-desktop span3" %>
		<%= f.label :from, t(:from), class: "visible-desktop span3" %>
		<%= f.label :to, t(:to), class: "visible-desktop span3" %>
		
		<%= f.label :val, t(:val), class: "hidden-desktop" %>
		<%= f.number_field :val, value: 0.00, step: 0.01, min: 0, class: 'span3'  %>
		<%= f.label :from, t(:from), class: "hidden-desktop" %>
		<%= f.select(:from, options_for_select(currencies, 'BRL'), class: 'span3' )%>
		<%= f.label :to, t(:to), class: "hidden-desktop" %>
		<%= f.select(:to, options_for_select(currencies, 'USD'), class: 'span3' )%>
		
		<div class="field">
			<%= f.submit 'Converter', class: 'btn btn-info' %>
			<button id="change" class="btn "><i class="icon-retweet"></i> Inverter</button>
		</div>
	<% end %>
	<div id="data-result"></div>
</div>


<% provide(:title, t(:welcome)) %>
		<div id="myCarousel" class="carousel slide">
			<div class="transparent-box">
				<%= render 'message' %>
			</div>
			<div class="carousel-inner">
				<% x=0%>
				<% @images.each do |i| %>
					<div class="item <%= "active" if x<1 %>">
						<%= image_tag(i.to_s, class:'') %>
						<%x=1%>
					</div>
				<%end%>
			</div>
		</div>

		<div class="row">
			<div class="span5">
				<h4><%=t(:star_products)%></h4>
				<div class="inner-box">
					<div class="row-fluid">
					<% @pl.each do |pack| %>
						<%= link_to image_tag(pack.image.to_s, class: 'span4'), pack.pdf.to_s, target: '_blank' %>
					<%end%>
					</div>
				</div>
			</div>
			<div class="span5">
				<h4><%=t(:promo_products)%></h4>
				<div class="inner-box">
				<div class="row-fluid">
					<% @pr.each do |pack| %>
						<%= link_to image_tag(pack.image.to_s, class: 'span4'), pack.pdf.to_s, target: '_blank' %>
					<%end%>
				</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="span5">
				<h4><%=t(:other_products)%></h4>
				<div class="inner-box">
					<div class="row-fluid">
						<% if @pb.size>=3%>


						<div id="myCarousel2" class="carousel slide">
							<div class="carousel-inner">
        						<div class="item active">
            						<%= link_to image_tag(@pb[0].image.to_s, class: 'span4'), @pb[0].pdf.to_s, target: '_blank' if @pb[0] %>
            						<%= link_to image_tag(@pb[1].image.to_s, class: 'span4'), @pb[1].pdf.to_s, target: '_blank' if @pb[1] %>
            						<%= link_to image_tag(@pb[2].image.to_s, class: 'span4'), @pb[2].pdf.to_s, target: '_blank' if @pb[2] %>
				            	</div>
				            	<% if @pb.size>=6%>
            					<div class="item">
            						<%= link_to image_tag(@pb[3].image.to_s, class: 'span4'), @pb[3].pdf.to_s, target: '_blank' if @pb[3] %>
        	    					<%= link_to image_tag(@pb[4].image.to_s, class: 'span4'), @pb[4].pdf.to_s, target: '_blank' if @pb[4] %>
    	        					<%= link_to image_tag(@pb[5].image.to_s, class: 'span4'), @pb[5].pdf.to_s, target: '_blank' if @pb[5] %>
					            </div>
					            <%end%>
				            	<%if @pb.size==9%>
            					<div class="item">
            						<%= link_to image_tag(@pb[6].image.to_s, class: 'span4'), @pb[6].pdf.to_s, target: '_blank' if @pb[6] %>
        	    					<%= link_to image_tag(@pb[7].image.to_s, class: 'span4'), @pb[7].pdf.to_s, target: '_blank' if @pb[7] %>
    	        					<%= link_to image_tag(@pb[8].image.to_s, class: 'span4'), @pb[8].pdf.to_s, target: '_blank' if @pb[8] %>
					            </div>
					            <%end%>
				            </div>
					 		<!-- Carousel nav-->
							<a class="carousel-control left" href="#myCarousel2" data-slide="prev">&lsaquo;</a>
							<a class="carousel-control right" href="#myCarousel2" data-slide="next">&rsaquo;</a>
						</div>



						<%else%>
							<% @pb.each do |pack| %>
								<%= link_to image_tag(pack.image.to_s, class: 'span4'), pack.pdf.to_s, target: '_blank' %>
							<%end%>
						<%end%>
						
						
						
					</div>
				</div>
				
			</div>
			<div class="span5">
				<h4><%=t(:follow_us)%></h4>
				<center><%=render 'layouts/fbbox'%></center>
			</div>
			
		</div>
		
		<div class="inner-box">
			<p class="lead">
				<strong><em>veja <%= link_to 'aqui', 'http://www.touroperator.com.br/portal/stz04/default.asp?ids=MMCAYY', target: '_blank'%> mais ofertas de viagem que temos para voce...</em></strong>
			</p>
		</div>
<script>
$('#myCarousel').carousel({
	interval: 3000
})
$('a img').mouseover(function(){
	$(this).css("opacity","0.6");
	$(this).css("filter","alpha(opacity=60)");
})
$('a img').mouseout(function(){
	$(this).css("opacity","1");
	$(this).css("filter","alpha(opacity=100)");
})
</script>

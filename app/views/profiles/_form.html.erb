<div class="row-fluid">
<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this pack from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.label :name, 'Perfil' %>
   	<%= f.text_field :name, class: 'span12', disabled: 'true' %>
   	
    <%= f.label :title, 'Nome'%>
   	<%= f.text_field :title, class: 'span12' %>

    <%= f.label :keywords, 'Palavras-chave'%>
   	<%= f.text_field :keywords, class: 'span12' %>

    <%= f.label :description, 'Descricao'%>
   	<%= f.text_field :description, class: 'span12' %>

    <%= f.label :about, 'Quem somos' %>
   	<%= f.text_area :about, rows: 3, class: 'span12' %>

    <%= f.label :mission, 'Missao' %>
   	<%= f.text_area :mission, rows: 3, class: 'span12' %>

    <%= f.label :pillars, 'Valores'%>
   	<%= f.text_field :pillars, class: 'span12' %>

    <%= f.label :addr1, 'Endereco' %>
   	<%= f.text_field :addr1, class: 'span12' %>

    <%= f.label :addr2, 'Endereco cont.'%>
   	<%= f.text_field :addr2, class: 'span12' %>

    <%= f.label :email%>
   	<%= f.text_field :email, class: 'span12' %>

    <%= f.label :tel1, 'Telefone' %>
   	<%= f.text_field :tel1, class: 'span12' %>

    <%= f.label :tel2, 'Telefone alternativo'%>
   	<%= f.text_field :tel2, class: 'span12' %>

    <%= f.label :tel3, 'Telefone plantao'%>
   	<%= f.text_field :tel3, class: 'span12' %>

